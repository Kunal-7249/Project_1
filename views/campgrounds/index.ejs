<% layout('layouts/boilerplate') %>
<div id="cluster-map"></div>
<div class="container">
  <h1>All Campgrounds!</h1>
  <div>
    <a href="/campgrounds/new">Add Campground</a>
  </div>

  <% for(let c of campgrounds){ %>
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
        <% if(c.images.length) { %>
        <img class="img-fluid" alt="" src="<%= c.images[0].url%>" />
        <% }else {%>
        <img
          class="img-fluid"
          alt=""
          src="https://res.cloudinary.com/dcjun6yis/image/upload/v1639283876/YelpCamp/qchyh5tgis9axcewa4oh.png"
        />
        <% } %>
      </div>
      <div class="col-md-8">
        <h5 class="card-title"><%=c.title %></h5>
        <p class="card-text"><%= c.description %></p>
        <p class="card-text">
          <small class="text-muted"><%=c.location%></small>
        </p>
        <a href="/campgrounds/<%= c.id %>" class="btn btn-primary"
          >View <%= c.title %>
        </a>
      </div>
    </div>
  </div>
  <% } %>
</div>
<script>
  const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
  const campgrounds ={features:<%- JSON.stringify(campgrounds) %>}
</script>

<script src="/javaScripts/clusterMap.js"></script>
